    <source-file src="src/android/libs/ShareSDK-Core-2.6.0.jar"           target-dir="libs"/>
    <source-file src="src/android/libs/ShareSDK-SinaWeibo-2.6.0.jar"      target-dir="libs"/>
    <source-file src="src/android/libs/ShareSDK-Wechat-2.6.0.jar"         target-dir="libs"/>
